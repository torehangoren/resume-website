---
const { src, alt, size = 104 } = Astro.props;
---
<div
  style={`width:${size}px; height:${size}px; border-radius:50%; border:1px solid rgba(255,255,255,0.2); box-shadow:0 10px 24px rgba(0,0,0,0.35), 0 0 12px rgba(255,255,255,0.08); overflow:hidden;`}
>
  <img
    src={src}
    alt={alt}
    width={size}
    height={size}
    loading="lazy"
    style="width:100%; height:100%; object-fit:cover; display:block;"
  />
</div>
