---
import Button from "../ui/Button.astro";
import Avatar from "../ui/Avatar.astro";

const name = "Törehan Gören";
const title = "SAP Developer (UI5) • UI5 Department Lead";
const location = "Austria";
const pitch =
  "SAP EWM and SAPUI5/Fiori developer delivering end-to-end solutions from UI to OData/RAP backends, including device integration and warehouse process automation.";

const links = {
  linkedin: "https://www.linkedin.com/in/toerehan-goeren/",
  github: "https://github.com/torehangoren",
  email: "mailto:torehangoren@gmail.com",
};

const avatarSrc = `${import.meta.env.BASE_URL}/assets/avatar.jpg`;
---
<section class="card section">
  <div class="grid grid-2">
    <div>
      <p class="kicker">{location}</p>
      <h1 class="h1">{name}</h1>
      <p style="margin-top:10px; color: var(--text); font-weight: 600;">{title}</p>
      <p style="margin-top:10px;">{pitch}</p>

      <div style="display:flex; gap:10px; flex-wrap:wrap; margin-top:14px;">
        <Button href={links.linkedin} target="_blank" variant="primary" label="LinkedIn" />
        <Button href={links.github} target="_blank" label="GitHub" />
        <Button href={links.email} label="Email" />
      </div>
    </div>

    <div style="display:flex; flex-direction:column; align-items:center; gap:12px;">
      <Avatar src={avatarSrc} alt={`${name} profile photo`} size={104} />
      <div class="card" style="padding:16px; border-radius: var(--radius); width:100%;">
        <div style="display:flex; flex-direction:column; gap:10px;">
          <div class="badge">Expertise: SAPUI5/Fiori • TypeScript • SAP EWM • End-to-End</div>
          <div class="badge">Leadership: Ownership • Tech Lead • Process Thinking • Quality</div>
          <div class="badge">Delivery: Custom UI5 Apps • Shared Libraries • RAP/OData • E2E Testing</div>
          <div class="badge">Domain: Warehouse Automation • Device Integration • Logistics • Operations</div>
        </div>
      </div>
    </div>
  </div>
</section>
