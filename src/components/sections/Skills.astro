---
import SectionTitle from "../ui/SectionTitle.astro";

const groups = [
  { title: "Frontend", items: ["SAP UI5", "TypeScript", "JavaScript", "OData", "Testing"] },
  { title: "Backend", items: ["ABAP", "RAP", "SAP EWM", "Integration"] },
  { title: "Ways of working", items: ["Ownership", "Coordination", "Quality focus", "Stakeholder management"] },
];
---
<section class="card section">
  <SectionTitle title="Skills" subtitle="Core competencies" />
  <div class="grid grid-3">
    {groups.map((g) => (
      <div class="card" style="padding:14px; background: var(--bg-elevated);">
        <div style="font-weight:700; margin-bottom:8px;">{g.title}</div>
        <div style="display:flex; gap:8px; flex-wrap:wrap;">
          {g.items.map((i) => <span class="badge">{i}</span>)}
        </div>
      </div>
    ))}
  </div>
</section>
